{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    // "declarationMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    // "noEmit": true,
    "noEmitOnError": true,
    "outDir": "./dist/",
    "rootDir": "./",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES3"
  },
  "includes": [
    "src/**/*"
  ],
  "exclude": [
    "assm/**/*",
    "node_modules/**/*",
    "old/**/*",
  ]
}
